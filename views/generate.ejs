<section id="summaries" class="card hidden-section">
    <h2>AI Generated Summaries</h2>
    <% if (summaries && summaries.length> 0) { %>
        <ul>
            <!-- <% summaries.forEach(summary=> { %> -->
                <li>
                    <strong>
                        <%= summary.title %>
                    </strong><br>
                    <p>
                        <%= summary.text  %>
                    </p>
                </li>
                <!-- <% }) %> -->

        </ul>
        <% } else { %>
            <p>No summaries yet. Upload your notes to generate summaries.</p>
            <% } %>
</section>

<section id="flashcards" style="display: none;" class="card hidden-section">
    <h2>Your Flashcards</h2>
    <% if (flashcards && flashcards[0] && flashcards[0].trim().length > 0) { %>
        <pre><%= flashcards[0] %></pre>
    <% } else { %>
        <p>No flashcards yet.</p>
    <% } %>
</section>





<!-- Quizzes -->
<section id="quizzes" style="display: none;"  class="card hidden-section">
    <h2>Interactive Quizzes</h2>
    <% if (quizzes) { %>
        <pre><%= quizzes %></pre>
        <% } else { %>
            <p>Start a quiz after generating content.</p>
            <% } %>
</section>

<!-- History -->
<section id="history" style="display: none;" class="card hidden-section">
    <h2>Your Activity History</h2>
    <% if (history && history.length> 0) { %>
        <ul>
            <!-- <% history.forEach(item=> { %> -->
                <li>
                    <strong>
                        <%= item.title %>
                    </strong> —
                    <%= new Date(item.createdAt).toLocaleString() %><br>
                        <a href="/api/generate?noteId=<%= item._id %>&title=<%= item.title %>">View</a>
                </li>
                <!-- <% }) %> -->
        </ul>
        <% } else { %>
            <p>No history yet. Upload files and generate content to see it here.</p>
            <% } %>

</section>

<!-- Progress -->
<section id="progress" style="display: none;" class="card hidden-section">
    <h2>My Learning Progress</h2>
    <% if (progress) { %>
        <p>📊 You’ve uploaded <%= progress.totalNotes %> notes.</p>
        <p>📝 Generated <%= progress.totalSummaries %> summaries.</p>
        <p>📚 Created <%= progress.totalFlashcards %> flashcards.</p>
        <p>❓ Completed <%= progress.totalQuizzes %> quizzes.</p>
        <% } else { %>
            <p>Graphs and stats will appear here once you start using the app.</p>
            <% } %>
</section>